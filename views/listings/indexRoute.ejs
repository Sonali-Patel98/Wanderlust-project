
    <% layout("/layouts/boilerplate") %>
    <h1>All Listings</h1>
    <!-- <form method="get" action="/listing/new">
        <button>Create new listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-sm-1 row-cols-md-2">
        <% for(let alldata of values){ %>
            <a href="/listing/<%= alldata._id  %>" class="listing-link">
                <div class="card col">
                    <img 
                        src="<%= alldata.image.url %>" 
                        class="card-img-top" 
                        alt="listing_image" 
                        style="height:20rem; ">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= alldata.title %> </b><br>
                            &#8377; <%= alldata.price.toLocaleString("en-IN") %> / night
                        </p>  
                    </div>
                </div>
            </a>
        <%}%> 
    </div>
